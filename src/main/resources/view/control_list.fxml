<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ControlListController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
            <Label text="Min likelihood:" />
            <TextField fx:id="likelihoodField" promptText="e.g. 3" prefWidth="100"/>
            <Button text="Apply" onAction="#onFilterByLikelihood"/>
            <Button text="Clear" onAction="#onClearFilter"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="Dashboard" onAction="#onDashboard"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="controlTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
                <TableColumn fx:id="impactColumn" text="Impact" />
                <TableColumn fx:id="likelihoodColumn" text="Likelihood" />
            </columns>
        </TableView>
    </center>
</BorderPane>