<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardController">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
            <Label text="Control Management System"
                   style="-fx-font-size: 24; -fx-font-weight: bold;"/>

            <Label text="Select a feature:" style="-fx-font-size: 14;"/>

            <HBox spacing="15" alignment="CENTER">
                <Button text="List Controls"
                        prefWidth="150"
                        prefHeight="50"
                        onAction="#onListControls"/>
                <Button text="Add New Control"
                        prefWidth="150"
                        prefHeight="50"
                        onAction="#onAddNewControl"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
